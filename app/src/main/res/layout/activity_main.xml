<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.morgan.actividadcambiardepantalla.MainActivity">

    <TextView
        android:text="@string/textViewNombre"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textViewNombre"
        android:textSize="18sp"
        android:layout_alignBaseline="@+id/editTextNombre"
        android:layout_alignBottom="@+id/editTextNombre"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:textColor="@android:color/black" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:ems="10"
        android:id="@+id/editTextNombre"
        android:layout_marginTop="14dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:hint="Nombre"
        android:selectAllOnFocus="false" />

    <TextView
        android:text="@string/textViewApellido"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textViewApellido"
        android:textSize="18sp"
        android:layout_below="@+id/editTextNombre"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="42dp"
        android:textColor="@android:color/black" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:ems="10"
        android:id="@+id/editTextApellido"
        android:layout_alignBaseline="@+id/textViewApellido"
        android:layout_alignBottom="@+id/textViewApellido"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:hint="Apellido" />

    <TextView
        android:text="@string/textViewEdad"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textViewEdad"
        android:textSize="18sp"
        android:layout_below="@+id/editTextApellido"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="39dp"
        android:textColor="@android:color/black" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:ems="10"
        android:id="@+id/editTextEdad"
        android:layout_alignBaseline="@+id/textViewEdad"
        android:layout_alignBottom="@+id/textViewEdad"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:hint="Edad" />

    <CheckBox
        android:text="@string/checkBoxPermiso"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/checkBoxPermiso"
        android:layout_marginTop="43dp"
        android:layout_below="@+id/editTextEdad"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:textSize="18sp" />

    <Button
        android:text="@string/buttonAceptar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/buttonAceptar"
        android:layout_marginTop="54dp"
        android:layout_below="@+id/checkBoxPermiso"
        android:layout_centerHorizontal="true" />
</RelativeLayout>
